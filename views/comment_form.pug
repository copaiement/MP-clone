extends routename_detail

block comment
  h1 Add comment

  form(method='POST' action='')
    div.form-group
      label(for='comment_text') Comment:
      input#comment_text.form-control(type='text' placeholder='Add a comment' name='comment_text' required='true' value=(undefined===comment ? '' : comment.comment_text) )
    div.form-group
      label(for='added_by') Added By:
      input#added_by.form-control(type='text' placeholder='Username' name='added_by' required='true' value=(undefined===comment ? '' : comment.comment_text) )
    button.btn.btn-primary(type='submit') Submit
  if errors
    ul
      for error in errors
        li!= error.msg
